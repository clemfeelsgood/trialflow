<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fleureau.healthcare"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.fleureau.healthcare.structure.HealthcareApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.fleureau.healthcare.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.fleureau.healthcare.WelcomeActivity"
            android:label="@string/title_activity_welcome"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.fleureau.healthcare.LoginActivity"
            android:label="@string/title_activity_login"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.fleureau.healthcare.ScanActivity"
            android:label="@string/title_activity_scan"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.fleureau.healthcare.DisplayActivity"
            android:label="@string/title_activity_display"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.fleureau.healthcare.TestActivity"
            android:label="@string/title_activity_test"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.fleureau.healthcare.DatePickActivity"
            android:label="@string/title_activity_date_pick" >
        </activity>
    </application>

</manifest>
